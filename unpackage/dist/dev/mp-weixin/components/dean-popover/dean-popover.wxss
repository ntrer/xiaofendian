  position: relative;
}
.compos .modal {
  background-color: #333333;
  position: absolute;
  -webkit-border-radius: 1vw;
          border-radius: 1vw;
  -webkit-transition: height ease-out 100ms;
  transition: height ease-out 100ms;
  z-index: 999;
}
.compos .modal .modal-item {
  z-index: 99;
  height: 7vw;
  line-height: 7vw;
  color: #fff;
  text-align: center;
  border-bottom: 1px solid #fff;
  margin-left: 2px;
  margin-right: 2px;
}
.compos .modal .modal-item:last-child {
  border-bottom: none;
}
